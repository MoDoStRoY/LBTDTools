{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "module": "ES2015",
    "moduleResolution": "node",
    "target": "ES2015",
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "types": ["webpack-env"],
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.promise",
      "ES2016.Array.Include"
    ]
  },
  "exclude": [
      "bin",
      "node_modules"
  ]
}